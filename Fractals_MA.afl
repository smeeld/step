AR=MA(Close, 9);
MP=EMA(Close, pma); 
for(i=0; i<BarCount; i++)
 { 
    
   proc_trade(oldfh, oldfl, MP[i], i);
   if(i<BarCount-3 AND i>2){
   if((H[i] > H[i-2] AND H[i] > H[i-1] AND H[i]>H[i+1]  AND H[i]> H[i+2]) AND H[i]>MP[i] ){ oldfh=i; };
   if((L[i] < L[i-2] AND L[i] < L[i-1] AND L[i]<L[i+1]  AND L[i]< L[i+2]) AND L[i]<MP[i] ){ oldfl=i; };
  };
   AR[i]=profit_sum+loss_sum+cur_close;
  
 };
 
 printf("Ok Loss Amount=%f Prof Amount=%f Loss Sum=%f Profit Sum=%f\n \n",
                            loss_count, profit_count, loss_sum, profit_sum);
Plot(AR, "Fractals_MA", colorGreen, styleLine );
